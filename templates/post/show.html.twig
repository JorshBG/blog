{% extends 'base.html.twig' %}

{% block body %}

    <twig:gradient:outline:links:Link route="{{ previousUri }}">Return</twig:gradient:outline:links:Link>

    <section class="mt-6">
        <article>
            <h1 class="text-4xl mb-6 text-slate-900 font-bold dark:text-white">
                {{ post.title }}
            </h1>

            <p class="text-gray-500 dark:text-gray-400">
                Author: <span class="text-slate-800 dark:text-white">{{ post.author.firstName }} {{ post.author.lastName }}</span>
            </p>
            <p class="text-gray-500 dark:text-gray-400">
                Created at: <span class="text-slate-800 dark:text-white">{{ created }}</span>
            </p>
            {% if updated %}
                <p class="text-gray-500 dark:text-gray-400">
                    Last update: <span class="text-slate-800 dark:text-white">{{ updated }}</span>
                </p>
            {% endif %}

            <div class="mb-4 text-gray-500 dark:text-gray-400">
                Categories:
                {% for category in categories %}

                    <span class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400">
                {{ category.name }}
            </span>

                {% endfor %}
            </div>


            <p class="text-xl mt-10 text-gray-500 dark:text-gray-400">
                {{ post.body }}
            </p>
        </article>
    </section>

    <section
            class="block mt-14 max-w-full p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">

        <article>
            <h2 class="font-bold text-2xl text-slate-900 dark:text-white mb-6">
                {{ comments|length }} Comments
            </h2>
        </article>

        <div class="ml-4 flex flex-col gap-y-5">

            {% for comment in comments %}

                <div class="flex flex-row gap-x-5">
                    <i class="fa-solid fa-circle-user text-slate-800 dark:text-white text-4xl"></i>
                    <twig:Comment comment="{{ comment }}"></twig:Comment>
                </div>

            {% endfor %}

        </div>

    </section>

{% endblock %}
